<h1>All Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable 'title', 'Title' %></th>
      <th><%= sortable 'rating', 'Rating' %></th>
      <th><%= sortable 'release_date', 'Release Date' %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date ? movie.release_date.strftime("%d-%b-%Y") : 'N/A' %></td>
        <td>
          <%= link_to 'Show', movie_path(movie) %>
          <%= link_to 'Edit', edit_movie_path(movie) %>
          <%= link_to 'Destroy', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4">Total Movies: <%= @movies.count %></td>
    </tr>
  </tfoot>
</table>

<%= link_to 'Add new movie', new_movie_path %>